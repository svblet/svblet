<% provide(:title, 'Add Alternate Email') %>
<h1>Add Alternate Email</h1>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <%= bootstrap_form_for([@user, @alternate_email], remote: true) do |f| %>
            <div class="spinner">Loading...</div>
            <div class="notice"></div>
            <%= f.text_field :email %>
            <%= f.submit "Add Alternate Email", class: "btn btn-large btn-primary" %>
        <% end %>
        <%= link_to "Next Step", new_user_phone_number_path(@user), class: "btn btn-large btn-primary", style: "display: block" %>
    </div>
</div>