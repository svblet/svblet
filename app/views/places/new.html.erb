<% provide(:title, 'Create a listing') %>
<h1>Create a listing</h1>
<div class="row">
  <%= bootstrap_form_for(@place) do |f| %>
    <div class="col-md-offset-3 col-md-6">
      <%= f.alert_message "Please fix the errors below." %>

      <%= f.text_field :title, label: "Title", autofocus: true %>
      <%= f.text_area :description, cols: 40, rows: 8, label: "Description" %> 
      <%= f.text_field :location, label: "Location" %>
      <%= f.number_field :looking_for, label: "How many people are you looking for?" %>
      <div id="price-input-field-parent">
        <%= f.label :price, id:"price-label" %>
        $<%= f.number_field :price, :step => 'any', hide_label: true %>
      </div>
      <%# TODO: Allow only numbers and certain symbols like "$" in price by changing allowed format? %>

      <div class="form-group">
        <div class="col-md-8 col-md-offset-2">
          <%= f.submit "Create my listing", class: "submit btn btn-success"%>
        </div>
      </div>
    </div>
  <% end %>
</div>
