<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SVBLET<%= content_for?(:title) ? " : " + yield(:title) : "" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Svblet" %>">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false" %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <div class="container" id="main">
       <%= render 'layouts/messages' %>
       <%= yield %>
       <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
