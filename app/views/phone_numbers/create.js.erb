$('.spinner').hide();

<% if @successful_save %>

    $('.notice').append("<%= escape_javascript(render("shared/bootstrap_alert", alert_type: "success", alert_message: "Successfully added #{number_to_phone(@phone_number.number, area_code: true)}")) %>");

<% else %>

    $('.notice').append("<%= escape_javascript(render("shared/bootstrap_alert", alert_type: "danger", alert_message: "Failed to add #{number_to_phone(@phone_number.number, area_code: true)}")) %>");

<% end %>